<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Description:"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textColor="#000" />



        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#740b0b" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Remedies:"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textColor="#000" />


        <TextView
            android:id="@+id/remedies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#740b0b" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Medicines:"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/medicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/blue"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/video"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="PlayVideo" />

        <EditText
            android:id="@+id/placename"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="find place" />

        <Button
            android:id="@+id/doctor"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="FindDoctor" />

        <Button
            android:id="@+id/hospital"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Find Hospital" />

        <Button
            android:id="@+id/pharmacy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Find Pharmacy" />

    </LinearLayout>

</ScrollView>